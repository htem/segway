{
    "GlobalConfig":
        {
            "dry_run": 0
        },

    "Network":
        {
            "mem_per_core": 4.5
        },

    "PredictTask":
        {
            "out_dataset" : "volumes/affs",
            "block_size_in_chunks" : [1, 8, 8],
            "num_workers": 1
        },
        
    "ExtractFragmentTask":
        {
            "affs_dataset": "/volumes/affs",
            "fragments_dataset": "/volumes/fragments",
            "block_size": [2240, 2048, 2048],
            "context": [320, 256, 256],
            "num_workers": 1,
            "fragments_in_xy": 1,
            "mask_fragments": 0,
            "use_mahotas": 0
        },

    "AgglomerateTask":
        {
            "affs_dataset": "/volumes/affs",
            "fragments_dataset": "/volumes/fragments",
            "merge_function": "hist_quant_60",
            "block_size": [8960, 8192, 8192],
            "context": [1280, 1024, 1024],
            "num_workers": 1,
            "cpu_mem": 32,
            "cpu_time": 0,
            "max_retries": 1
        },

    "SegmentationTask":
        {
            "fragments_dataset": "/volumes/fragments",
            "out_dataset": "volumes/segmentation",
            "thresholds": [0.6, 0.7, 0.8, 0.85, 0.9],
            "cpu_mem": 32,
            "cpu_time": 1,
            "num_workers": 1
        },

    "BlockwiseSegmentationTask":
        {
            "fragments_dataset": "/volumes/fragments",
            "out_dataset": "volumes/sparse_segmentation",
            "block_size": [2240, 2048, 2048],
            "threshold": 0.5,
            "num_workers": 8
        }
}